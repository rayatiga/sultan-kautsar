{
  "hosting": {
    "public": "public/v2",
    "ignore": ["**/.*"],
    "redirects": [
      {
        "source": "/rcdn",
        "destination": "https://cdn.rayatiga.com",
        "type": 301
      },
      {
        "source": "/rayatiga",
        "destination": "https://rayatiga.com",
        "type": 301
      }
    ],
    "headers": [
      {
        "source": "**/*.@(ttf)",
        "headers": [
          {
            "key": "Access-Control-Allow-Origin",
            "value": "*"
          }
        ]
      },
      {
        "source": "**/*.@(jpg|css|js|ttf)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=7200"
          }
        ]
      },
      {
        "source": "404.html",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=300"
          }
        ]
      }
    ],
    "cleanUrls": true,
    "trailingSlash": true
  }
}
